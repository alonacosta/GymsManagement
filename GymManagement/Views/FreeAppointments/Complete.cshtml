@model GymManagement.Data.Entities.FreeAppointment
@{
    ViewData["Title"] = "Complete";
}

<div class="shadow-none p-3 bg-body-tertiary rounded bg-white full-height-appoint">
    @if(Model.IsComplete == false)
    {
        <h3>Mark as complete</h3>
    }
    else
    {
        <h3>Mark as incomplete</h3>
    }

    <hr />
    <div class="row">
        <h6>@Model.FullName</h6>
        <p class="mb-1">@Model.Email</p>
        <p class="mt-0">@Model.SessionName</p>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Complete" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="LastName" />
                <input type="hidden" asp-for="PhoneNumber" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="SessionName" />
                <input type="hidden" asp-for="Message" />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                    </label>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                    <a asp-action="ManageFreeAppointments" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to List</a>
                </div>
            </form>
      </<div>
    </div>
</div>
