@model GymManagement.Models.ChangePostViewModel
@{
    ViewData["Title"] = "Create Reply";
   
}

<div class="shadow-none p-3 mb-5 bg-body-tertiary rounded bg-white">
    <div class="text-danger">
        <p>
            @ViewBag.Error
        </p>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdatePost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Username" />
                <input type="hidden" asp-for="PostId" />
                <div class="form-group mb-3">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    @* <a asp-action="Discussion" asp-route-postId="@ViewData["PostId"]" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back</a> *@
                </div>
            </form>
        </div>
    </div>
</div>
