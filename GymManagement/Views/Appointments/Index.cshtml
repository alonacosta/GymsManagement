@model IEnumerable<GymManagement.Data.Entities.Appointment>
@{
    ViewData["Title"] = "Index";
}

<h3>Your Appointments</h3>

<table class="table mt-3">
    <thead>
        <tr>         
            <th>
                @Html.DisplayNameFor(model => model.Session.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session.StartSession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session.Duration)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Session.IsOnline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session.IsGroup)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>               
                <td>
                    @Html.DisplayFor(modelItem => item.Session.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Session.StartSession)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Session.Duration)
                </td>              
                <td>
                    @Html.DisplayFor(modelItem => item.Session.IsOnline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Session.IsGroup)
                </td>              
                <td>
                    @if(item.Session.StartSession > DateTime.Now)
                    {
                        <a asp-action="CancelBooking" asp-route-id="@item.Id" class="btn btn-danger">Cancel Book</a>
                    }  
                    else
                    {
                        <a asp-action="CancelBooking" asp-route-id="@item.Id" class="btn btn-secondary disabled" aria-disabled="true">Cancel Book</a>
                    }
                </td>
            </tr>
        }
    </tbody>
    </table>

