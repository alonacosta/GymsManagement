@model IEnumerable<GymManagement.Data.Entities.Gym>
@{
    ViewData["Title"] = "GymsFromCountry";
    var countryId = ViewData["CountryId"];
}

<h2>Gyms</h2>

<div class="row mt-3">
    @foreach (var item in Model)
    { 
        <div class="card me-4" style="width: 18rem;">
            <img src="@item.ImageFullPath" class="card-img-top" alt="Gym Photo" style="width:100%; height:200px; object-fit:cover;">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.Address),  @Html.DisplayFor(modelItem => item.City.Name)</p>
               @*  <a asp-action="GetSessionsFromGym" asp-controller="Gyms" asp-route-countryId="@countryId" asp-route-gymId="@item.Id" class="card-link btn btn-outline-success w-100">See Sessions</a> *@
                <a asp-action="GetClassesMap" asp-controller="Gyms" asp-route-countryId="@countryId" asp-route-gymId="@item.Id" class="card-link btn btn-outline-success w-100">Classes Map</a>
            </div>
        </div>       
    }   
</div>



