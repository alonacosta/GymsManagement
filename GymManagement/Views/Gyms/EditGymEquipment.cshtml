@model GymManagement.Models.GymEquipmentViewModel

@{
    ViewData["Title"] = "EditGymEquipment";
    var gymId = ViewData["GymId"];
}

<div class="shadow-none p-5 mb-5 bg-body-tertiary rounded bg-white">
    <h3>Edit Gym Equipment</h3>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditGymEquipment" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />            

                <div class="form-group mb-2">
                    <label asp-for="EquipmentId" class="control-label"></label>
                    <select asp-for="EquipmentId" class="form-control" asp-items="Model.Equipments"></select>
                    <span asp-validation-for="EquipmentId" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
                <div class="form-group mb-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                    <a asp-action="Edit" asp-route-Id="@gymId" class="btn btn-success"><i class="fas fa-chevron-left"></i> Back to Gym</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}