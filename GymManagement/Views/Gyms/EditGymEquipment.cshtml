@model GymManagement.Models.GymEquipmentViewModel

@{
    ViewData["Title"] = "EditGymEquipment";
}

<h2>Edit Gym Equipment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGymEquipment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GymId" />

            <div class="form-group">
                <label asp-for="EquipmentId" class="control-label"></label>
                <select asp-for="EquipmentId" class="form-control" asp-items="Model.Equipments"></select>
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Edit" asp-route-GymId ="@Model.GymId" class="btn btn-success">Back to Gym</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}