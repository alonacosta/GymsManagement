@model GymManagement.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="shadow-none p-3 bg-body-tertiary rounded bg-white full-height">
    <h3 class="mb-5 text-center">Reset Your Password</h3>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="Token" />

                <div class="form-group mb-3">
                    <label asp-for="UserName">Email</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-warning"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password">New password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword">Confirm</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Reset password" class="btn btn-primary" />
                </div>
            </form>
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}