@model GymManagement.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<div class="shadow-none p-3 bg-body-tertiary rounded bg-white full-height">
    <h3 class="mt-5 mb-4 text-center">Recover Password</h3>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Recover password" class="btn btn-primary" />
                    <a asp-action="Login" class="btn btn-success">Back to login</a>
                </div>
            </form>
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}