@model IEnumerable<GymManagement.Models.UserViewModel>

@{
    ViewData["Title"] = "UserManagementIndex";
}

<div class="shadow-none p-3 mb-1 bg-body-tertiary rounded bg-white">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title mb-2">User Management</h3>
                    <p>
                        <a class="btn btn-primary" asp-action="Add" asp-route-roleName="Client">Register New Client</a>
                        <a class="btn btn-success" asp-action="Add" asp-route-roleName="Employee">Register New Employee</a>
                    </p>
                </div>
                <div class="panel-body table-responsive">
                    <div class="text-success">
                        <flash dismissable="true" />
                    </div>
                    <table class="table table-hover table-striped" id="TablePosition">
                        <thead>
                            <tr>                               
                                <th class="align-middle py-1">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th class="align-middle py-1">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th class="align-middle py-1">
                                    @Html.DisplayNameFor(model => model.Role)
                                </th>
                                <th style="width: 1%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>                                    
                                    <td class="align-middle py-1">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="align-middle py-1">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td class="align-middle py-1">
                                        @Html.DisplayFor(modelItem => item.Role)
                                    </td>
                                    <td class="align-middle py-1"> 
                                         <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info me-2"><i class="fas fa-list"></i></a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-2"><i class="fas fa-edit"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
